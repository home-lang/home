{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Home",
  "scopeName": "source.home",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.home",
          "match": "//.*$"
        },
        {
          "name": "comment.block.home",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.home",
          "match": "\\b(if|else|while|for|match|break|continue|return|async|await)\\b"
        },
        {
          "name": "keyword.declaration.home",
          "match": "\\b(fn|struct|enum|trait|impl|type|let|const|mut|pub|use|mod)\\b"
        },
        {
          "name": "keyword.other.home",
          "match": "\\b(where|self|Self|as|in)\\b"
        },
        {
          "name": "constant.language.home",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.home",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.home",
              "match": "\\\\(n|t|r|\\\\|'|\"|\\{|\\})"
            }
          ]
        },
        {
          "name": "string.quoted.single.home",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.home",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.home",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.home",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.home",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.home",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.octal.home",
          "match": "\\b0o[0-7]+\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.home",
          "match": "\\b(i32|i64|u32|u64|f32|f64|bool|char|str|String)\\b"
        },
        {
          "name": "storage.type.home",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.home",
          "match": "\\b([a-z_][a-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.home",
          "match": "(\\+|\\-|\\*|/|%|==|!=|<|>|<=|>=|&&|\\|\\||!|&|\\||\\^|<<|>>|=|\\+=|\\-=|\\*=|/=|%=|\\?|::|->|\\.)"
        }
      ]
    }
  }
}
