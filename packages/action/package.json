{
  "name": "@ion-lang/setup-ion",
  "version": "0.1.0",
  "description": "GitHub Action to setup Ion programming language",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "package": "bun run build && bun run format",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ion-lang/ion.git",
    "directory": "packages/action"
  },
  "keywords": [
    "actions",
    "ion",
    "setup",
    "compiler",
    "programming-language"
  ],
  "author": "Ion Contributors",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "bun-types": "latest",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
