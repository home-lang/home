{
  "name": "Ion",
  "scopeName": "source.ion",
  "fileTypes": ["ion"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ion",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ion",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ion",
          "match": "\\b(if|else|for|while|loop|break|continue|return|match|async|await|trait|impl)\\b"
        },
        {
          "name": "keyword.declaration.ion",
          "match": "\\b(let|mut|fn|struct|enum|type|const|static|use|pub|mod|comptime|macro)\\b"
        },
        {
          "name": "keyword.other.ion",
          "match": "\\b(as|in|where|unsafe|move|ref)\\b"
        },
        {
          "name": "storage.modifier.ion",
          "match": "\\b(pub|mut|const|async)\\b"
        },
        {
          "name": "constant.language.ion",
          "match": "\\b(true|false|null|None|Some|Ok|Err)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ion",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ion",
              "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.single.ion",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ion",
              "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.ion",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.ion",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.ion",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.ion",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.ion",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ion",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.ion",
          "match": "\\b(print|println|assert|panic|todo|unimplemented)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.ion",
          "match": "\\b(int|float|bool|string|void|u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|usize|isize)\\b"
        },
        {
          "name": "storage.type.generic.ion",
          "match": "\\b(Vec|HashMap|Result|Option|Box|Rc|Arc)\\b"
        },
        {
          "name": "entity.name.type.ion",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.ion",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.ion",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.ion",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.ion",
          "match": "(&|\\||\\^|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.ion",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.range.ion",
          "match": "(\\.\\.|\\.\\.\\.)"
        },
        {
          "name": "keyword.operator.access.ion",
          "match": "(\\.|::)"
        },
        {
          "name": "keyword.operator.borrow.ion",
          "match": "&(mut\\s+)?"
        },
        {
          "name": "keyword.operator.question.ion",
          "match": "\\?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.ion",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.ion",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.ion",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.comma.ion",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.ion",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.ion",
          "match": ":"
        }
      ]
    }
  }
}
