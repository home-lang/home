// Integer Division Unit Test Suite

it("should perform basic integer division") {
    assert((7 ~/ 2) == 3);
    assert((10 ~/ 3) == 3);
    assert((17 ~/ 5) == 3);
}

it("should handle exact division") {
    assert((10 ~/ 2) == 5);
    assert((12 ~/ 4) == 3);
    assert((100 ~/ 10) == 10);
}

it("should truncate toward zero") {
    assert((9 ~/ 4) == 2);
    assert((15 ~/ 4) == 3);
    assert((99 ~/ 10) == 9);
}

it("should handle division by one") {
    assert((42 ~/ 1) == 42);
    assert((100 ~/ 1) == 100);
}

it("should work with power operator") {
    let powered = 2 ** 5;
    let divided = powered ~/ 10;
    assert(divided == 3);
}

