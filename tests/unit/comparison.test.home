// Comparison Operators Unit Test Suite

it("should compare with equality") {
    assert((5 == 5) == true);
    assert((5 == 6) == false);
    assert((0 == 0) == true);
    assert((-5 == -5) == true);
}

it("should compare with inequality") {
    assert((5 != 6) == true);
    assert((5 != 5) == false);
    assert((0 != 1) == true);
    assert((-5 != 5) == true);
}

it("should compare with less than") {
    assert((3 < 5) == true);
    assert((5 < 3) == false);
    assert((5 < 5) == false);
    assert((-10 < 0) == true);
}

it("should compare with greater than") {
    assert((5 > 3) == true);
    assert((3 > 5) == false);
    assert((5 > 5) == false);
    assert((0 > -10) == true);
}

it("should compare with less or equal") {
    assert((3 <= 5) == true);
    assert((5 <= 5) == true);
    assert((6 <= 5) == false);
    assert((-5 <= -5) == true);
}

it("should compare with greater or equal") {
    assert((5 >= 3) == true);
    assert((5 >= 5) == true);
    assert((3 >= 5) == false);
    assert((-3 >= -5) == true);
}

it("should compare zero") {
    assert((0 == 0) == true);
    assert((0 < 1) == true);
    assert((0 > -1) == true);
    assert((0 <= 0) == true);
    assert((0 >= 0) == true);
}

it("should compare negative numbers") {
    assert((-5 < -3) == true);
    assert((-3 > -5) == true);
    assert((-5 == -5) == true);
    assert((-10 < 10) == true);
}

it("should handle comparison chains in expressions") {
    let a = 5;
    let b = 10;
    let c = 5;
    assert((a < b) == true);
    assert((a == c) == true);
    assert((b > a) == true);
}

