// Advanced Switch Expression Tests

it("should match integer values") {
    let x = 2;
    let mut result = 0;
    switch (x) {
        1 => { result = 10; },
        2 => { result = 20; },
        3 => { result = 30; },
        else => { result = -1; },
    }
    assert(result == 20);
}

it("should handle default case") {
    let x = 99;
    let mut result = 0;
    switch (x) {
        1 => { result = 1; },
        2 => { result = 2; },
        else => { result = -1; },
    }
    assert(result == -1);
}
