// Compile-time Execution Test
// Tests the complete comptime implementation

// Test 1: Simple comptime expression
const COMPUTED = comptime 40 + 2;
assert(COMPUTED == 42);

// Test 2: Comptime arithmetic
const SUM = comptime 10 + 20 + 12;
assert(SUM == 42);

// Test 3: Comptime multiplication
const PRODUCT = comptime 6 * 7;
assert(PRODUCT == 42);

// Test 4: Comptime division
const QUOTIENT = comptime 84 / 2;
assert(QUOTIENT == 42);

// Test 5: Comptime nested operations
const COMPLEX = comptime (10 + 5) * 2 + (20 - 8);
assert(COMPLEX == 42);

// Test 6: Comptime boolean operations
const TRUE_VAL = comptime true and true;
assert(TRUE_VAL == true);

const FALSE_VAL = comptime true and false;
assert(FALSE_VAL == false);

// Test 7: Comptime comparison
const GREATER = comptime 10 > 5;
assert(GREATER == true);

const LESS = comptime 5 < 10;
assert(LESS == true);

// Test 8: Comptime conditional
const CHOICE = comptime 10 > 5 ? 42 : 0;
assert(CHOICE == 42);

// Test 9: Comptime string operations
const MESSAGE = comptime "Hello";
assert(MESSAGE == "Hello");

// Test 10: Multiple comptime values
const A = comptime 10;
const B = comptime 20;
const C = comptime 12;
const TOTAL = A + B + C;
assert(TOTAL == 42);

print("âœ“ All comptime tests passed!");
